			.panel.panel-default
				.panel-heading
					h3.panel-title Control de Documento
				.panel-body
					img(src="./images/contenido/control.png", alt="",style="width: 100%;")
				
			.panel.panel-default
				.panel-heading
					h3.panel-title: a(href='/contact') Contáctenos
				.panel-body
					a(href='/contact'): img(src="./images/contactenos_dr.png", alt="",style="width: 100%;")
	
	div(style="margin-top: 60px; padding-left: 10vw; padding-right: 10vw;")
